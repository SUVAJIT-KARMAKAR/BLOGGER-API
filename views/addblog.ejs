<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
        <title> BLOGGER | POSTBLOG </title>
</head>

<body>
    <!-- Navigation bar  -->
    <%- include('./partials/navbar.ejs') %>
        <!-- Add blog form  -->
        <div class="container mt-4">
            <form action="/blog/addblog", method="post", enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="text" class="form-label"> TITLE OF YOUR BLOG </label>
                    <input type="text" name="title" class="form-control" id="title" placeholder="Write your title of the blog here">
                </div>
                <div class="mb-3">
                    <label for="text" class="form-label"> WRITTEN BY  </label>
                    <input type="text" name="username" class="form-control" id="username" placeholder="Write your fullname here">
                </div>
                <div class="mb-3">
                    <label for="body" class="form-label"> WRITE YOUR BLOG CONTENT HERE </label>
                    <textarea class="form-control" id="body" name="body" rows="12"></textarea>
                </div>
                <div class="mb-3">
                    <label for="coverimage" class="form-label"> UPLOAD YOUR COVER IMAGE HERE </label>
                    <input type="file" name="coverimage" class="form-control" id="coveriamge">
                </div>
                <div class="mb-3">
                    <button class="btn btn-outline-primary" type="submit"> SUBMIT </button>
                </div>
            </form>
        </div>
        <!-- Scripts -->
        <%- include('./partials/scripts.ejs') %>
</body>

</html>